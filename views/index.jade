extends layout

block content
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/#/') App
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li(ng-class='{active: !$route.current.activeTab || $route.current.activeTab == "main"}')
                a(href='/#/') Home
              li(ng-class='{active: $route.current.activeTab == "products"}' ng-show='authService.authentication.isAuth')
                a(href='/#products') View products
              li(ng-class='{active: $route.current.activeTab == "productCreate"}' ng-show='authService.authentication.isAuth')
                a(href='/#product/create') Create new

            ul.nav.navbar-nav.navbar-right
              li(ng-show='!authService.authentication.isAuth', ng-class='{active: $route.current.activeTab == "login"}')
                a(href='/#login') Login
              li(ng-show='authService.authentication.isAuth')
                a
                  b(ng-bind="'Welcome ' + authService.authentication.username")
              li(ng-show='authService.authentication.isAuth')
                a(href='#', ng-click='logout()') Logout
      ng-view

